@model Mehrsam_Darou.Models.MedicineBom
@{
    ViewData["Title"] = "افزودن ماده اولیه به BOM";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <!-- Success and Error Alerts -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success px-2" role="alert">
                        <p class="mb-0">با موفقیت انجام شد</p>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger px-2" role="alert">
                        <p class="mb-0">خطا</p>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4>افزودن ماده اولیه به BOM دارو: @ViewBag.MedicineName</h4>
                    <a href="@Url.Action("MedicineBOM", new { id = Model.MedicineId })" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> بازگشت به BOM دارو
                    </a>
                </div>

                <form asp-action="AddBOM">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MedicineId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MaterialId" class="form-label"></label>
                                <select asp-for="MaterialId" asp-items="@ViewBag.Materials" class="form-select">
                                    <option value="">-- انتخاب کنید --</option>
                                </select>
                                <span asp-validation-for="MaterialId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Quantity" class="form-label"></label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UnitId" class="form-label"></label>
                                <select asp-for="UnitId" asp-items="@ViewBag.Units" class="form-select">
                                    <option value="">-- انتخاب کنید --</option>
                                </select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label"></label>
                                <select asp-for="IsActive" class="form-select">
                                    <option value="true">فعال</option>
                                    <option value="false">غیرفعال</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-1"></i> ذخیره
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}