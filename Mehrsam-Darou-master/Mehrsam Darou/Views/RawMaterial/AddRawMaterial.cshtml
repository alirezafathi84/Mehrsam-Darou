@model Mehrsam_Darou.Models.RawMaterial

@{
    ViewData["Title"] = "افزودن ماده اولیه جدید";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <!-- Success and Error Alerts -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success px-2" role="alert">
                        <p class="mb-0">با موفقیت انجام شد</p>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger px-2" role="alert">
                        <p class="mb-0">خطا</p>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4>افزودن ماده اولیه جدید</h4>
                    <a href="@Url.Action("RawMaterialList")" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i> بازگشت به لیست
                    </a>
                </div>

                <form asp-action="AddRawMaterial">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MaterialName" class="form-label">نام ماده</label>
                                <input asp-for="MaterialName" class="form-control" />
                                <span asp-validation-for="MaterialName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MaterialCode" class="form-label">کد ماده</label>
                                <input asp-for="MaterialCode" class="form-control" />
                                <span asp-validation-for="MaterialCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">دسته بندی</label>
                                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
                                    <option value="">-- انتخاب دسته بندی --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UnitId" class="form-label">واحد اندازه‌گیری</label>
                                <select asp-for="UnitId" asp-items="@ViewBag.Units" class="form-select">
                                    <option value="">-- انتخاب واحد --</option>
                                </select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MinStockLevel" class="form-label">حداقل سطح موجودی</label>
                                <input asp-for="MinStockLevel" class="form-control" />
                                <span asp-validation-for="MinStockLevel" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MaxStockLevel" class="form-label">حداکثر سطح موجودی</label>
                                <input asp-for="MaxStockLevel" class="form-control" />
                                <span asp-validation-for="MaxStockLevel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LeadTimeDays" class="form-label">زمان تأمین (روز)</label>
                                <input asp-for="LeadTimeDays" class="form-control" />
                                <span asp-validation-for="LeadTimeDays" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label">وضعیت</label>
                                <select asp-for="IsActive" class="form-select">
                                    <option value="true">فعال</option>
                                    <option value="false">غیرفعال</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-1"></i> ذخیره
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}