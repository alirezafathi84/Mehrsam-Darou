@using static Mehrsam_Darou.Helper.Helper
@model PaginatedList<Mehrsam_Darou.Models.Team>
@using System.Globalization

@{
    PersianCalendar pc = new PersianCalendar();
}
@* @model IEnumerable<Mehrsam_Darou.Models.User> *@ <!-- Commented out, but ensure it's on its own line -->

<h2>لیست تیم</h2>


<div class="row">
    <div class="col-xl-12">
        <div class="card">

            <div class="card-body">

                <!-- Success and Error Alerts -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success px-2" role="alert">
                        <p class="mb-0">با موفقیت انجام شد</p>
                        <p class="mb-0">@TempData["SuccessMessage"]</p>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-primary px-2" role="alert">
                        <p class="mb-0">خطا</p>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                }


                <div class="d-flex flex-wrap justify-content-between gap-3">
                    <form method="get" asp-action="Index">
                        <div class="search-bar">
                            <span><i class="bx bx-search-alt"></i></span>
                            <input type="search" name="SearchKey" value="@Context.Request.Query["SearchKey"]" class="form-control" placeholder="جستجو ..">
                            @*   <button type="submit" class="btn btn-primary">جستجو</button> *@
                        </div>
                    </form>
                    <div>
                        <a href="@Url.Action("AddNewTeam", "Team")" class="btn btn-primary">      <i class="bx bx-plus me-1"></i>جدید </a>

                    </div>

                </div>

            </div>



            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-hover table-centered">
                        <thead class="bg-light-subtle">
                            <tr>

                                <th>نام</th>
                                <th>صفحه پیشفرض</th>
                                <th>وضعیت</th>
                                <th>مدیریت</th>
                                <th>تنظیمات</th>
                                <th>کاربران</th>
                                <th>مالی</th>
                                <th>انبار</th>
                                <th>تولید</th>
                                <th>بازرگانی خرید</th>
                                <th>بازرگانی فروش</th>
                                <th>تحقیق و توسعه</th>
                                <th>کنترل کیفیت</th>
                                <th>تضمین کیفیت</th>
                                <th>PMO</th>
                                <th>اقدامات</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var team in Model)
                                {
                                    <tr>

                                        <td>@team.Name</td>
                                        <td>@team.DefaultPageForTeam</td>
                                        <td>

                                            @{
                                                if ((bool)(@team.IsActive))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }




                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.ManagmentDashboard))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Setting))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.SystemUsers))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }



                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Financial))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>

                                        <td>
                                            @{
                                                if ((bool)(@team.Inventory))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Product))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.SellCommercial))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.BuyCommercial))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.RandD))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Qc))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Qa))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            @{
                                                if ((bool)(@team.Pmo))
                                                {
                                                    <span class="badge bg-warning text-white py-1 px-2">فعال</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary text-white py-1 px-2">غیر فعال</span>
                                                }

                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">

                                                <a href="@Url.Action("EditTeam", "Team", new { id = team.Id })" class="btn btn-soft-primary btn-sm">
                                                    <iconify-icon icon="solar:pen-2-broken" class="align-middle fs-18"></iconify-icon>
                                                </a>
                                                <form id="deleteUserForm_@team.Id" method="post" action="@Url.Action("DeleteTeam", "Team")" style="display:inline;">
                                                    <input type="hidden" name="id" value="@team.Id" />
                                                    <button type="button" class="btn btn-soft-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal_@team.Id">
                                                        <iconify-icon icon="solar:trash-bin-minimalistic-2-broken" class="align-middle fs-18"></iconify-icon>
                                                    </button>


                                                    <!-- Modal -->
                                                    <div class="modal fade" id="exampleModal_@team.Id" tabindex="-1" aria-labelledby="exampleModalLabel_@team.Id" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel_@team.Id">عنوان مودال</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>از حذف کردن این رکورد مطمئن هستید؟!</p>
                                                                    <p>@team.Name</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                                                                    <button type="submit" class="btn btn-primary" onclick="confirmDelete(@team.Id)">حذف</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }

                                <script>
                                    function confirmDelete(userId) {
                                        // Close the modal
                                        var modal = new bootstrap.Modal(document.getElementById('exampleModal_' + userId));
                                        modal.hide();

                                        // Submit the form after confirmation
                                        document.getElementById('deleteTeamForm_' + userId).submit();
                                    }
                                </script>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center">No users found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
            <div class="card-footer border-top">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end mb-0">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("TeamList", new { page = Model.PageIndex - 1, SearchKey = Context.Request.Query["SearchKey"] })">قبلی</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">قبلی</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" href="@Url.Action("TeamList", new { page = i, SearchKey = Context.Request.Query["SearchKey"] })">@i</a>
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("TeamList", new { page = Model.PageIndex + 1, SearchKey = Context.Request.Query["SearchKey"] })">بعدی</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">بعدی</a>
                            </li>
                        }
                    </ul>

                </nav>
            </div>
        </div>
    </div>
</div>



